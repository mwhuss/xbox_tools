require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('xbox_tools', '0.0.1') do |p|
  p.description    = "Various tools for retrieving Xbox information in Ruby"
  p.url            = "http://github.com/mwhuss/xbox_tools"
  p.author         = "Marshall Huss"
  p.email          = "mwhuss@gmail.com"
  p.ignore_pattern = ["pkg/"]
  p.development_dependencies = []
end

